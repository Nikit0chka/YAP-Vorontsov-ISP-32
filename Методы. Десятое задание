using System;

namespace Методы_десятое
{
    class Program
    {
        public static void ArraySum(int[] massiv1, int[] massiv2)
        {
            int dlina1 = massiv1.Length;
            int dlina2 = massiv2.Length;
            int[] sum_massiv = new int[massiv1.Length + massiv2.Length];

            if (dlina1 > dlina2)
            {
                for (int i = 0; i != dlina1; i++)
                {
                    sum_massiv[i] = massiv1[i];
                }
                for (int i = 0; i != dlina2; i++)
                {
                    sum_massiv[i] = massiv1[i] + massiv2[i];
                }
                for (int i = 0; i != dlina1; i++)
                {
                    Console.Write($"{sum_massiv[i]} ");
                }
            }
            else
            {
                for (int i = 0; i != dlina2; i++)
                {
                    sum_massiv[i] = massiv2[i];
                }
                for (int i = 0; i != dlina1; i++)
                {
                    sum_massiv[i] = massiv1[i] + massiv2[i];
                }
                for (int i = 0; i != dlina2; i++)
                {
                    Console.Write($"{sum_massiv[i]} ");
                }
            }
        }
        static void Main(string[] args)
        {
            int[] massiv1 = { 1, 2, 3, 4, 5, 6, 6 };
            int[] massiv2 = { 1, 2, 3, 4, 5, 6, 6, 7};

            ArraySum(massiv1, massiv2);
        }
    }
}
