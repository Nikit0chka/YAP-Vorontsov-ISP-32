using System;

namespace Циклы_третье
{
    class Program
    {
        static void Main()
        {
            Console.Write("Visota = ");
            
            int visota = int.Parse(Console.ReadLine());
            int probeli = visota;
            for (int i = 0, z = 1; i < visota; i++, z += 2)
            {
                Console.Write(new string(' ', probeli--));
                Console.Write(new string('*', z));
                Console.WriteLine();
            }
        }
    }
}
