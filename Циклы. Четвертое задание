using System;

namespace циклы
{
    class Program
    {
        static void Main()
        {
            int n = int.Parse(Console.ReadLine());
            int i = 0;
            int chasi = 12, minuti = 30;
            float angle = 0, angle1 = 165, chasi_angle = 0, minuti_angle = 0;
            
            while (i != n)
            {
                if (minuti == 60) { chasi++; minuti = 0; }

                minuti++;
                chasi_angle = 0.5f * (chasi * 60 + minuti);
                minuti_angle = 6 * minuti;

                angle = Math.Abs(chasi_angle - minuti_angle);
                angle = Math.Min(angle, 360 - angle);

                if (angle1 < 30 && angle >= 30) i++;
                angle1 = angle;
            }
            Console.WriteLine($"{chasi} : {minuti}");
        }
    }
}
